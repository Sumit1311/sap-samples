<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
>
	<Dialog
		id="helloDialog"
		title="{parts: ['i18n>helloMsg', '/receipient/name'], formatter: '.formatMessage'}"
	>
		<content>
			<core:Icon
            src="sap-icon://hello-world"
            size="8rem"
            class="sapUiMediumMargin"/>
		</content>
		<beginButton>
			<Button text="{i18n>okayDialogButtonText}" press=".onCloseDialog"></Button>			
		</beginButton>
		<endButton>
			<Button text="{i18n>closeDialogButtonText}" press=".onCloseDialog"></Button>			
		</endButton>
	</Dialog>	
</core:FragmentDefinition>